<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="udp"
       parallel="methods"
       thread-count="5"
        >

    <test name="udp" junit="false" time-out="80000">
        <parameter name="channel.conf" value="udp.xml"/>
        <groups>
            <run>
            	<include name="base"/>       
            	<include name="stack-dependent"/>
            	<exclude name="stack-independent"/>
                <exclude name="broken"/>
                <exclude name="known-failures"/>
                <exclude name="flush"/>               
            </run>
        </groups>
        <packages>
            <package name="org.jgroups.tests.*"/>
            <package name="org.jgroups.blocks.*"/>
            <package name="org.jgroups.protocols.*"/>
        </packages>
    </test>

</suite>