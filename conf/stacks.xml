    <stack name="tunnel"
           description="Used with a GossipRouter">
        <config>
            <TUNNEL router_port="${jgroups.tunnel.router_port:12001}" router_host="${jgroups.tunnel.router_host:127.0.0.1}"/>
            <PING timeout="2000"
                  down_thread="false" up_thread="false" num_initial_members="3"
                  gossip_refresh="10000"
                  gossip_host="${jgroups.tunnel.router_host:127.0.0.1}"
                  gossip_port="${jgroups.tunnel.router_port:12001}"/>
            <MERGE2 max_interval="20000"
